<h1>My Wiki</h1>
<div class="container text-center">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-4 col-md-6 col-sm-12 text-center">
      <h2><%= @article.title %></h2>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12">
      <%= image_tag(@article.image, class: "card-img-top wiki-img", alt: "...") %>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12 actions">
      <%= link_to "Back", articles_path, class: "btn btn-primary btn-size
" %>
      <%= link_to "Edit", edit_article_path(@article), class: "btn btn-warning btn-size" %>
      <%= link_to "Delete", article_path(@article),
data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-size
" %>
    </div>
  </div>
  <div class="row p-3">
    <p><%= @article.content %></p>
  </div>
</div>
